  using System;
   using System.Collections.Generic;
    using System.Text;
    
    namespace HerenciaConstructores
    {
 
    
        public class A 
       {
            public void Metodo()
           {
               Console.WriteLine("hola metodo en A");
               Console.ReadKey();
           }
      }
    
       public class B : A 
      {   
       }
   
       class Program
      {
           static void Main(string[] args)
          {
               A a = new A();
             B b = new B();
    
              a.Metodo(); Console.ReadKey();
              b.Metodo();Console.ReadKey();
           }
           
       }
   }
